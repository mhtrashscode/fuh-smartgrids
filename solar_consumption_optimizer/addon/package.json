{
	"name": "de.fernunihagen.smartgrids.socopt",
	"version": "1.0.0",
	"description": "UI5 Application: de.fernunihagen.smartgrids.socopt",
	"author": "Max",
	"license": "Apache-2.0",
	"scripts": {
		"clean": "rimraf dist coverage",
		"build": "ui5 build --dest ../rootfs/app/static --clean-dest",
		"build:opt": "ui5 build self-contained --dest ../rootfs/app/static --clean-dest --all",
		"start": "ui5 serve --port 8080 -o index.html",
		"start:dist": "npm start -- --config ui5-dist.yaml",
		"start:dist-cdn": "npm run start-cdn -- --config ui5-dist.yaml",
		"ts-typecheck": "tsc --noEmit",
		"lint": "eslint webapp",
		"test": "npm run lint && npm run karma-ci-cov",
		"wdi5": "wdio run ./webapp/test/e2e/\\wdio.conf.ts"
	},
	"devDependencies": {
		"@openui5/types": "^1.125.0",
		"@typescript-eslint/eslint-plugin": "^7.14.1",
		"@typescript-eslint/parser": "^7.14.1",
		"@ui5/cli": "^3.11.0",
		"@wdio/cli": "^8.39.1",
		"@wdio/local-runner": "^8.39.1",
		"@wdio/mocha-framework": "^8.39.0",
		"@wdio/spec-reporter": "^8.39.0",
		"eslint": "^8.57.0",
		"rimraf": "^5.0.7",
		"ts-node": "^10.9.2",
		"typescript": "^5.5.3",
		"ui5-middleware-livereload": "^3.0.3",
		"ui5-tooling-transpile": "^3.4.5",
		"wdio-ui5-service": "^2.0.9"
	}
}
